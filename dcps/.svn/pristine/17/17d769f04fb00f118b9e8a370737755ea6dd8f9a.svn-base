/*this is the css for the vertical version*/
.vertical ul {
	list-style-type: none;
	padding: 0px;
	border-top: 1px solid;
	width: 190px;
	margin-left:0px;
}

.vertical li a {
	display: block;
	width: 190px;
	text-decoration: none;
	height: auto;
	padding: .2em 2px;
	border: 1px solid;
	border-top: 0px;
	
}

.vertical li {
	/*Needed for IE. Don't ask me why, It was a lucky guess.*/
	display: inline;
	
	
}

.vertical li ul {
	position: absolute;
	margin-top: -1.3em;
	margin-left: 190px;
}

/*this is the css for the horizontal version*/
.horizontal ul {
	background: #ffffff;
/*	border: 1px solid #6688aa;*/
	list-style-type: none;
	display: block;	/*changed from inline to block :shripal*/
	height: 22px;
	margin: 0px 0px 0px 0px;
	
	
}

.horizontal li {
	float: left;
	display: inline;
	background: #984206  url(images/main-menu-bg.png) top repeat-x;	
	
	/*Filter: Alpha(Opacity=100, FinishOpacity=90, Style=2, StartX=10, StartY=10, FinishX=0, FinishY=0); */
}
.horizontal ul li ul li{
	width: 100%;
}

.horizontal li a {
	text-decoration: none;
	height: auto;
	float: left;
	display: block;
	padding: 3px 2px;
	width: 150px;
	/*border-right : none;
	border-left: 1px solid #1e1e1e;	*/
	white-space: nowrap;
	font-family:verdana ;
	font-size: 13px;
	
	
}

.horizontal li li a {
	/*border-top: none;*/
	white-space: normal;
	
}

.horizontal li ul {
	position: absolute;
	margin-top: 20px;	/*changed from 5px to 20px :shripal*/
	/*margin-left: -130px;
	left: 130px;*/
	width: 200px;
	display: block;
	
	/*height: auto;
	border: 1px solid #232323;*/
	background-color: transparent;  /*changed from  #343434 to transparent : shripal */
}
.horizontal li li ul {
	position: absolute;
	margin-top: 2px;
	margin-left: 206px;	/* changed from 206px to 206px : shripal*/
}

.horizontal li ul li a {
	width: 100%;
	border-top: 1px solid #565656;
	border-bottom: 1px solid #232323;
	border-left: 1px solid #565656;
	border-right: 1px solid #232323;
}

/*This section makes the menu not work in non-javascript enabled browsers by not showing the menu by default-This can be worked around by making top level links point to a sitemap*/
	/*Not sure if I recommend this or not*/
.inaccesible li ul {
	display: none;
	
}

/*Arrow code - looks like <a class="haschild" href="#">Text <span>Arrow</span></a> can be turned on/off with arrow class*/
.arrow a span {
	padding-left: 1em;
	font-size: 85%;	
	width: 100%;
}

.arrow a:hover span {
	padding-left: 1em;	
}

.arrow a span.noshow {
	visibility: hidden;
}

/*Plus code*/
.plus a span {
	padding-left: .5em;
}

